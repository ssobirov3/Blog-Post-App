extends layout.pug 

block content
    div.container
        h1 Create Post

        if err
            p.error Post should not be empty

        if success
            p.success Post is created successfully
            
        form.form(action="/create" method='POST')
            label Blog Title
            input.input(type="text" name='title')

            label Blog Snippet
            input.input(type="text" name='snippet')
            
            label Blog Description
            textarea.input(type="text" name='description' cols='10' rows='5')

            button.btn Create Post
